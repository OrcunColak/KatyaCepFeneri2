<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.katya.katyacepfeneri.MainActivity">

    <RelativeLayout android:id="@+id/relativeLayout1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp" android:layout_alignParentBottom="true"
                    tools:layout_editor_absoluteY="0dp" tools:layout_editor_absoluteX="0dp">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arkadaşıma İthaf Edilmiştir"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.546"
                app:layout_constraintVertical_bias="0.243" android:id="@+id/textView"
        />

        <Button
                android:id="@+id/buttonFenerAc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Feneri Aç" android:layout_below="@+id/textView" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
        />


        <Button
                android:id="@+id/buttonFenerKapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Feneri Kapa" android:layout_below="@+id/buttonFenerAc" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
        />
        <Button
                android:id="@+id/buttonIsildakAc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Işıldak Aç" android:layout_below="@+id/buttonFenerKapa" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
        />
        <Button
                android:id="@+id/buttonIsildakKapa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="Işıldak Kapa" android:layout_below="@+id/buttonIsildakAc" android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
        />
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/buttonIsildakKapa">
            <TextView
                    android:id="@+id/text_view_pusula"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pusula"
                    android:layout_alignParentLeft="true"
                    />
            <EditText
                    android:id="@+id/edt_text_pusula"
                    android:hint="Derece"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:drawable/editbox_background"
                    android:layout_toRightOf="@+id/text_view_pusula"
                    android:inputType="none"
                    />

        </RelativeLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
